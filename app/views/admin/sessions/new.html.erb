
<div class  = "login_container">
  <h2>Admin Login:</h2>
  <%= form_tag admin_sessions_path do %>
    <p><%= text_field_tag :username, nil, placeholder: 'Username', class: "formheight" %></p> 
    
     <p><%= password_field_tag :password, nil, placeholder: 'Password', class: "formheight" %> </p>
     <%= submit_tag "Log In", class: "loginbutton" %>
  <% end %>
  <br>
</div>